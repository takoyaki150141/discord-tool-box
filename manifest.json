{
  "manifest_version": 2,
  "name": "discord tool box",
  "version": "1.0",
  "description": "トークンの保存やコピー、ロードなどができるDiscordの多機能拡張機能です",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "*://*.discord.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.discord.com/*"],
      "js": ["content.js"]
    }
  ]
}
